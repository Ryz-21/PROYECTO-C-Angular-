{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleDetection": "force",
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true

  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
